# a6hub Backend Configuration
# Copy this file to .env and update with your values

# Application
PROJECT_NAME=a6hub
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
POSTGRES_USER=a6hub
POSTGRES_PASSWORD=a6hub_dev_password
POSTGRES_DB=a6hub
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MinIO (S3-compatible object storage)
# For local development: use localhost:9000
# For Docker containers: use minio:9000 (set in docker-compose.yml)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=a6hub-artifacts
MINIO_FILES_BUCKET=a6hub-files
MINIO_SECURE=false

# Storage Paths
STORAGE_BASE_PATH=/tmp/a6hub-storage
GIT_REPOS_PATH=/tmp/a6hub-repos

# EDA Tools (in worker containers)
LIBRELANE_PATH=/opt/librelane
PDK_ROOT=/opt/pdk
VERILATOR_PATH=/usr/bin/verilator
ICARUS_PATH=/usr/bin/iverilog

# Job Configuration
MAX_JOB_DURATION_SECONDS=3600
MAX_PROJECT_SIZE_MB=100
MAX_FILE_SIZE_MB=10

# Worker Configuration
WORKER_CONTAINER_IMAGE=a6hub-worker:latest
WORKER_TIMEOUT=3600

# OpenLane/LibreLane Docker Image
# Use one of the following based on your needs:
# - efabless/openlane:latest (OpenLane v1 - stable, recommended)
# - ghcr.io/efabless/openlane2:2.3.1 (OpenLane 2 - newer features)
# - ghcr.io/the-openroad-project/openlane (alternative source)
DEFAULT_OPENLANE_IMAGE=efabless/openlane:latest
